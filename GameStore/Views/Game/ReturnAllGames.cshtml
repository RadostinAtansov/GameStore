@model IEnumerable<GamesIGDBViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "ReturnAllGames";
}

<h1 style="text-decoration: solid underline black 4px; text-underline-offset: 0.2em; width:200px;">All Games</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/css/cardReturnAll.css">
    <link rel="stylesheet" href="~/css/searchBar.css">
    <link rel="stylesheet" href="~/css/SideMenu.css"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <title>Document</title>


</head>
    <body>

        <div class="topnav">
            <a type="submit" class="active" asp-controller="Game" asp-action="ReturnAllTopRatedGames">Top Rated</a>
            <a type="submit" class="help" asp-controller="Game" asp-action="ReturnAllComingSoonGames">Comming Soon</a>
            <a type="submit" class="help" asp-controller="Game" asp-action="RecentlyReleasedGames">Recently Released</a>
            <a type="submit" class="help" asp-controller="Game" asp-action="MostAnticipatedGames">Top Anticipated Games</a>
            <a type="submit"><span style="font-size:14px" onclick="openNav()"><i class="fa-solid fa-circle-left"></i> Game Platforms</span></a>
            <a type="submit"><span style="font-size:14px" onclick="openNavGenre()"><i class="fa-solid fa-circle-left"></i> Genre</span></a>
        <div class="search-container">
            <form asp-controller="Game" asp-action="SearchByName" method="get">
                <input type="text" placeholder="Search.." name="search">
                <button type="submit"><i class="fa fa-search"></i></button>
            </form>
        </div>
        </div>
        <div class="courses-container">
           @foreach (var game in Model)
           {
            <div class="card">
                <a href="javasscript:void();">
                    <a type="submit" asp-controller="Game" asp-action="Details" asp-route-id="@game.Id"> 
                        <div class="category">@game.GenresInfo[0].Name</div>
                        <img src="@game.CoverUrl.Url" />
                        <h2 class="title">@game.Name</h2>
                        <div class="description">@game.Summary</div>
                        <div class="info">
                            <div class="platforms">
                                @foreach (var platform in game.PlatformsInfo)
                                {
                                    @platform.Name 
                                    <br />
                                }
                                </div>
                            <div class="duration">
                                <div class="time-icon">@game.Rating</div>
                            </div>
                        </div>
                    </a>
                </a>
            </div>
           }      
        </div>
            <div id="mySidenav" class="sidenav">
                <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&times;</a>
                <a href="#">PC (Microsoft Windows)</a>
                <a href="#">PlayStation 5</a>
                <a href="#">Xbox Series X|S</a>
                <a href="#">Nintendo Switch</a>
                <a href="#">Mac</a>
                <a href="#">Linux</a>
                <a href="#">iOS</a>
                <a href="#">Android</a>
                <a href="#">Xbox One</a>
                <a href="#">PlayStation 4</a>
            </div>
        <div id="mySidenavGenre" class="sidenav">
            <a href="javascript:void(0)" class="closebtn" onclick="closeNavGenre()">&times;</a>
            <a href="#">Point-and-click</a>
            <a href="#">Fighting</a>
            <a href="#">Shooter</a>
            <a href="#">Music</a>
            <a href="#">Platform</a>
            <a href="#">Puzzle</a>
            <a href="#">Racing</a>
            <a href="#">Real Time Strategy (RTS)</a>
            <a href="#">Role-Playing (RPG)</a>
            <a href="#">Simulator</a>
            <a href="#">Sport</a>
            <a href="#">Turn-based strategy (TBS)</a>
            <a href="#">Tactical</a>
            <a href="#">Quiz/Trivia</a>
            <a href="#">Hack and slash/Beat `em up</a>
            <a href="#">Pinball</a>
            <a href="#">Adventure</a>
            <a href="#">Arcade</a>
            <a href="#">Visual Novel</a>
            <a href="#">Indie</a>
            <a href="#">Card & Board Game</a>
            <a href="#">MOBA</a>
        </div>
    <script>
        function openNav() {
            document.getElementById("mySidenav").style.width = "250px";
        }

        function closeNav() {
            document.getElementById("mySidenav").style.width = "0";
        }

        function openNavGenre() {
            document.getElementById("mySidenavGenre").style.width = "250px";
        }

        function closeNavGenre() {
            document.getElementById("mySidenavGenre").style.width = "0";
        }
    </script>
    </body>
</html>


