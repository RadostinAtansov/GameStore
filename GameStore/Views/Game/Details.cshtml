@model GameStore.Models.IGDB.DetailsViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>


    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Summary)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Summary)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cover)
        </dt>
        <dd class="col-sm-10">
            <img src="@Url.Content(Model.CoverInfo.Url)" width="150" />
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Genres)
        </dt>
        <dd class="col-sm-10">
            @foreach (var genre in Model.GenresInfo)
            {
                <p>@genre.Name</p>
            }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Images)
        </dt>
        <dd class="col-sm-10">
            @foreach (var img in Model.Images)
            {
                <img src="@Url.Content(img.Url)" width="250"/>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GameModes)
        </dt>
        <dd class="col-sm-10">
            @foreach (var mode in Model.GameModesInfo)
            {
                <p>@mode.Name</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Platforms)
        </dt>
        <dd class="col-sm-10">
            @foreach (var platform in Model.PlatformsInfo)
            {
                <p>@platform.Name</p>
            }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Websites)
        </dt>
        <dd class="col-sm-10">
            @foreach (var site in Model.WebsitesInfo)
            {
                <p>@site.Category</p>
                <p>@site.Url</p>
                <a ></a>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
